<div class="container mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">図書館詳細情報</h1>

  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">エラー！</strong>
      <span class="block sm:inline"><%= flash[:alert] %></span>
    </div>
  <% elsif @library_detail %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gray-100 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-700"><%= @library_detail['formal'] %></h2>
        <p class="text-gray-500"><%= @library_detail['short'] %></p>
      </div>

      <div class="p-6">
        <h3 class="font-semibold text-lg text-gray-700 mb-3">連絡先</h3>
        <div class="mb-4">
          <div class="grid grid-cols-3 gap-4 mb-2">
            <div class="font-medium text-gray-600">住所</div>
            <div class="col-span-2 text-gray-700"><%= @library_detail['address'] %></div>
          </div>
          <div class="grid grid-cols-3 gap-4 mb-2">
            <div class="font-medium text-gray-600">電話番号</div>
            <div class="col-span-2 text-gray-700"><%= @library_detail['tel'] %></div>
          </div>
          <div class="grid grid-cols-3 gap-4 mb-2">
            <div class="font-medium text-gray-600">郵便番号</div>
            <div class="col-span-2 text-gray-700"><%= @library_detail['post'] %></div>
          </div>
          <div class="grid grid-cols-3 gap-4">
            <div class="font-medium text-gray-600">URL</div>
            <div class="col-span-2 text-gray-700">
              <% if @library_detail['url_pc'].present? %>
                <%= link_to @library_detail['url_pc'], @library_detail['url_pc'], target: '_blank', class: "text-blue-500 hover:underline" %>
              <% else %>
                -
              <% end %>
            </div>
          </div>
        </div>

        <h3 class="font-semibold text-lg text-gray-700 mb-3 mt-5">所在地情報</h3>
        <div class="mb-4">
          <div class="grid grid-cols-3 gap-4 mb-2">
            <div class="font-medium text-gray-600">都道府県</div>
            <div class="col-span-2 text-gray-700"><%= @library_detail['pref'] %></div>
          </div>
          <div class="grid grid-cols-3 gap-4 mb-2">
            <div class="font-medium text-gray-600">市区町村</div>
            <div class="col-span-2 text-gray-700"><%= @library_detail['city'] %></div>
          </div>
          <div class="grid grid-cols-3 gap-4">
            <div class="font-medium text-gray-600">緯度経度</div>
            <div class="col-span-2 text-gray-700"><%= @library_detail['geocode'] %></div>
          </div>
        </div>

        <h3 class="font-semibold text-lg text-gray-700 mb-3 mt-5">図書館情報</h3>
        <div>
          <div class="grid grid-cols-3 gap-4 mb-2">
            <div class="font-medium text-gray-600">図書館キー</div>
            <div class="col-span-2 text-gray-700"><%= @library_detail['libkey'] %></div>
          </div>
          <div class="grid grid-cols-3 gap-4 mb-2">
            <div class="font-medium text-gray-600">正式名称</div>
            <div class="col-span-2 text-gray-700"><%= @library_detail['formal'] %></div>
          </div>
          <div class="grid grid-cols-3 gap-4">
            <div class="font-medium text-gray-600">略称</div>
            <div class="col-span-2 text-gray-700"><%= @library_detail['short'] %></div>
          </div>
        </div>
      </div>

      <div class="px-6 py-4 bg-gray-100 border-t border-gray-200">
        <%= link_to "都道府県別一覧に戻る", regions_path(pref_name: @library_detail['pref']), class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  <% else %>
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4" role="alert">
      <p>図書館情報を取得できませんでした。</p>
    </div>
  <% end %>
</div>