<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-4">
  <% @books.each do |book| %>
    <div class="book-item bg-white rounded-lg shadow-md p-4 flex flex-col">
      <div class="flex space-x-4">
        <div class="flex-shrink-0">
          <% if book.image_link.present? %>
            <%= image_tag book.image_link, class: "w-32 h-auto rounded-md object-cover", alt: book.title %>
          <% else %>
            <%= image_tag "default_image.png", class: "w-32 h-auto rounded-md object-cover", alt: "No Image" %>
          <% end %>
        </div>

        <div class="flex flex-col flex-grow">
          <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= book.title %></h3>
          
          <% if book.author.present? %>
            <p class="text-sm text-gray-600 mb-1">
              <span class="font-medium">著者:</span> <%= book.author %>
            </p>
          <% end %>

          <% if book.publisher.present? %>
            <p class="text-sm text-gray-600 mb-1">
              <span class="font-medium">出版社:</span> <%= book.publisher %>
            </p>
          <% end %>

          <%= link_to '詳細を見る', book_path(book), 
              class: "mt-auto px-4 py-2 bg-green-600 text-white text-center rounded-md hover:bg-green-700 transition-colors duration-200" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="my-4 flex justify-center">
  <%= paginate @books %>
</div>
