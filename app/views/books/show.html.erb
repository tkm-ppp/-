<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6"><%= @book.title %></h1>

  <div class="flex flex-col md:flex-row gap-8">
    <div class="w-full md:w-1/3">
      <% if @book.cover_url.present? %>
        <%= image_tag @book.cover_url, class: "w-full rounded-lg shadow-lg", alt: @book.title %>
      <% else %>
        <%= image_tag "default_image.png", class: "w-full rounded-lg shadow-lg", alt: "No Image" %>
      <% end %>
    </div>

    <div class="w-full md:w-2/3">
      <div class="space-y-4">
        <% if @book.author.present? %>
          <p class="text-lg">
            <span class="font-semibold">著者:</span> <%= @book.author %>
          </p>
        <% end %>

        <% if @book.publisher.present? %>
          <p class="text-lg">
            <span class="font-semibold">出版社:</span> <%= @book.publisher %>
          </p>
        <% end %>

        <% if @book.published_date.present? %>
          <p class="text-lg">
            <span class="font-semibold">出版日:</span> <%= @book.published_date %>
          </p>
        <% end %>

        <% if @book.page_count.present? %>
          <p class="text-lg">
            <span class="font-semibold">ページ数:</span> <%= @book.page_count %>
          </p>
        <% end %>

        <% if @book.description.present? %>
          <div class="mt-6">
            <h2 class="text-xl font-semibold mb-2">概要</h2>
            <p class="text-gray-700"><%= @book.description %></p>
          </div>
        <% end %>

        <% if @book.info_link.present? %>
          <div class="mt-6">
            <%= link_to "詳細情報", @book.info_link, 
                class: "inline-block px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200",
                target: "_blank",
                rel: "noopener noreferrer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-8">
    <%= link_to '検索結果に戻る', search_books_path(search: params[:search]), 
        class: "inline-block px-6 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors duration-200" %>
  </div>
</div>