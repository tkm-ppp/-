<h2 class="text-2xl font-bold mb-6 text-white">新規作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if flash[:error].present? %>
    <div class="alert alert-danger"><%= flash[:error] %></div>
  <% end %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-4">
    <%= f.label :name, "ユーザー名", class: "block text-white mb-1" %>
    <%= f.text_field :name, autofocus: true, class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <div class="field mb-4">
    <%= f.label :email, "メールアドレス", class: "block text-white mb-1" %>
    <%= f.email_field :email, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, "パスワード", class: "block text-white mb-1" %>
    <% if @minimum_password_length %>
      <em class="text-white">（<%= @minimum_password_length %> 文字以上）</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <div class="field mb-4">
    <%= f.label :password_confirmation, "パスワード（確認用）", class: "block text-white mb-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <div class="actions mt-6">
    <%= f.submit "新規作成", class: "btn btn-primary bg-blue-500 text-white rounded-lg px-4 py-2 hover:bg-blue-600 transition" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
